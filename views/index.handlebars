<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="jumbotron bg-danger">
        <h1 class="display-1 text-center">What-a-Burger</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6" id="devoF">
      <div class="card">
        <div class="card-body bg-dark">
          <h2 class="card-title text-center">Burgers that are not devoured!</h2>
          <ul>
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <div class="col-6" id="devoT">
      <div class="card">
        <div class="card-body bg-dark">
          <h2 class="card-title text-center">Burgers that are devoured!</h2>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body bg-dark">
          <h2 class="card-title">Add a Burger</h2>
          <form class="create-form">
            <div class="form-group">
              <label class="card-title" for="burg">Burger Name:</label>
              <input type="text" id="burg" name="name">
            </div>
            <button type="submit" class="btn btn-danger text-center">Add Burger</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>